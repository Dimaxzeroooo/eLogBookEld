<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="@dimen/margin_short_5" android:top="@dimen/margin_short_5">
                <shape>
                    <solid android:color="#ff58bb52" />
                    <corners android:radius="@dimen/margin_10"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="@dimen/margin_short_5" android:top="@dimen/margin_short_5">
                <shape>
                    <solid android:color="@color/gray_default" />
                    <corners android:radius="@dimen/margin_10"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="@dimen/margin_short_4" >
                <shape>
                    <solid android:color="#ff58bb52" />
                    <corners android:radius="@dimen/margin_10"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>