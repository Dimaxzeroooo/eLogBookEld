<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_default"
        android:backgroundTint="?attr/layout_color_dot"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_26"
        android:paddingBottom="@dimen/view_height_40"
        android:paddingRight="@dimen/margin_26"
        android:paddingLeft="@dimen/margin_26"


        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/current_hos_configu"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:paddingBottom="@dimen/margin_short_5"
        />


        <ListView
            android:id="@+id/hosConfigListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_20"
            tools:listitem="@layout/item_current_hos"
            />



        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btn_ok"
            android:layout_marginTop="25dp"
            android:text="@string/ok"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:background="@drawable/green_selector"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_20"

            />

    </LinearLayout>

    </ScrollView>




</LinearLayout>