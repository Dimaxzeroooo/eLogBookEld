<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/itemShippingLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/shipNoTV"
            android:layout_width="@dimen/margin_short_1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_eld_theme"
            android:textSize="@dimen/text_size_13"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:textStyle="bold"

            />



        <TextView
            android:id="@+id/shipperNoItemTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ShippingDocNo"
            android:textColor="@color/color_eld_theme"
            android:textSize="@dimen/text_size_13"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_weight="1"
            />



        <TextView
            android:id="@+id/commodityItemTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CommodityItem"
            android:textColor="@color/color_eld_theme"
            android:textSize="@dimen/text_size_13"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:textStyle="bold"
            android:layout_weight="1"
            android:singleLine="true"

            />


        <TextView
            android:id="@+id/shipperNameItemTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ShipperName"
            android:textColor="@color/color_eld_theme"
            android:textSize="@dimen/text_size_13"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:textStyle="bold"
            android:layout_weight="1"
            android:singleLine="true"

            />


        <TextView
            android:id="@+id/shipperFromItemTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fromm"
            android:textColor="@color/color_eld_theme"
            android:textSize="@dimen/text_size_13"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:textStyle="bold"
            android:layout_weight="0.9"
            android:singleLine="true"

            />



        <TextView
            android:id="@+id/shipperToItemTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/too"
            android:textColor="@color/color_eld_theme"
            android:textSize="@dimen/text_size_13"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:textStyle="bold"
            android:layout_weight="0.9"
            android:singleLine="true"

            />




    </LinearLayout>


</LinearLayout>