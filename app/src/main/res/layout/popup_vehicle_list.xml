<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent"
        android:padding="@dimen/margin_15"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:id="@+id/loginTruckLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/voilet_border"
            android:orientation="vertical"
            android:padding="@dimen/margin_15"
            android:backgroundTint="?attr/trailer_dialog_background"

            >
            <!--   android:backgroundTint="?attr/trailer_dialog_background"-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/refreshVehTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/margin_short_5"
                    android:paddingTop="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_short_5"
                    android:paddingBottom="@dimen/margin_short_5"
                    android:text="@string/refresh"
                    android:textColor="?attr/textColor"
                    android:textSize="@dimen/text_size_17"
                    android:visibility="gone"

                    />


                <TextView
                    android:id="@+id/TitleVehTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margin_short_8"
                    android:text="@string/select_truck_from_list"
                    android:textColor="?attr/textColor"
                    android:textSize="@dimen/text_size_19"
                    android:textStyle="bold"

                    />


                <TextView
                    android:id="@+id/logoutVehTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/margin_short_5"
                    android:paddingTop="@dimen/margin_20"
                    android:paddingRight="@dimen/margin_short_5"
                    android:paddingBottom="@dimen/margin_short_5"
                    android:text="@string/logout"
                    android:textColor="?attr/textColor"
                    android:textSize="@dimen/text_size_17"


                    />


            </RelativeLayout>


            <TextView
                android:id="@+id/updateVehTitleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_18"
                android:text="@string/select_truck_to_changee"
                android:textColor="?attr/textColor"
                android:textSize="@dimen/text_size_17"
                android:textStyle="bold"
                android:visibility="invisible"

                />

            <com.androidtrip.plugins.searchablespinner.SearchableSpinner
                android:id="@+id/searchableSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_short_7"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/edtittext_border"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/margin_13"
                android:paddingTop="@dimen/margin_short_1"
                android:paddingRight="@dimen/margin_short_3"
                android:paddingBottom="@dimen/margin_short_1"
                app:BoarderColor="@android:color/white"
                app:BordersSize="@dimen/margin_short_1"
                app:RevealEmptyText="@string/Select"
                app:RevealViewBackgroundColor="@color/white"
                app:SearchViewBackgroundColor="@color/whiteee"
                app:ShowBorders="true"
                app:SpinnerExpandHeight="@dimen/view_height_170"


                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_40"
                android:layout_marginTop="@dimen/view_height_50"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/view_height_40"
                android:paddingRight="@dimen/view_height_40">


                <Button
                    android:id="@+id/btnCancelChngeVehJob"
                    android:layout_width="@dimen/view_height_150"
                    android:layout_height="@dimen/view_height_35"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_weight="1"
                    android:background="@drawable/gray_selector"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteee"
                    android:textSize="@dimen/text_size_17"
                    android:visibility="gone" />


                <Button
                    android:id="@+id/btnSaveVehList"
                    android:layout_width="@dimen/view_height_150"
                    android:layout_height="@dimen/view_height_35"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_weight="1"
                    android:background="@drawable/green_selector"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteee"
                    android:textSize="@dimen/text_size_17"

                    />


            </LinearLayout>


        </LinearLayout>


        <ProgressBar
            android:id="@+id/pBarTruckSlctDialog"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"

            />


    </RelativeLayout>


    </RelativeLayout>

