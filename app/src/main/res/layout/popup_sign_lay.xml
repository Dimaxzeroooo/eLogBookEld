<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainPopLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >


    <RelativeLayout
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/white_default"
        android:backgroundTint="?attr/trailer_dialog_background"
        android:paddingBottom="15dp"

        >

        <RelativeLayout
            android:id="@+id/viewSignContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/white_default"
            android:backgroundTint="?attr/trailer_dialog_background"
            android:layout_toLeftOf="@+id/showPreviousSign"

            >

            <TextView
                android:id="@+id/changeTitleView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="22dp"
                android:gravity="left"
                android:paddingLeft="@dimen/margin_15"
                android:text="Certify log alert !!"
                android:textColor="?attr/txt_eld_color"
                android:textSize="23sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/descLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/changeTitleView"
                android:gravity="left"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/titleDescView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:text="Do you really want to confirm the Load Delivery?"
                    android:textColor="?attr/app_color_primary"
                    android:textSize="16sp" />

            </LinearLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/showPreviousSign"
            android:layout_width="@dimen/view_height_160"
            android:layout_height="@dimen/view_height_80"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_20"
            android:paddingRight="@dimen/margin_25" />

        <LinearLayout
            android:id="@+id/btnLinLay"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_below="@+id/showPreviousSign"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginRight="18dp"
            android:orientation="horizontal">


            <!-- android:background="@drawable/edtittext_border"-->
            <Button
                android:id="@+id/cancelPopupButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_marginRight="@dimen/margin_short_7"
                android:background="@drawable/transparent"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="?attr/blue_button_hover"
                android:textSize="@dimen/text_size_14"

                />


            <Button
                android:id="@+id/confirmPopupButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/transparent"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="?attr/txt_eld_color"
                android:textSize="18sp"
                android:textStyle="bold"

                />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
