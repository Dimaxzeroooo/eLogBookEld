<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_20"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >



    <TextView
        android:id="@+id/permissionTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/permissionTitle"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold"
        android:text="@string/RecordStatus"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"


        />


    <ImageView
        android:id="@+id/permissionImgView"
        android:layout_width="@dimen/view_height_160"
        android:layout_height="@dimen/view_height_150"
        android:src="@drawable/permsn_storage"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
    />




        <TextView
            android:id="@+id/permissionDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/permissionDesc"
            android:layout_marginTop="@dimen/margin_short_3"
            android:paddingBottom="@dimen/margin_short_2"
            android:textSize="@dimen/text_size_16"
            android:layout_below="@+id/permissionTitleTV"
            android:layout_toLeftOf="@+id/permissionImgView"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/margin_15"
            />



</RelativeLayout>
</ScrollView>