<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <androidx.cardview.widget.CardView
        android:id="@+id/confirmCertifyBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="@dimen/margin_short_7"
        app:cardBackgroundColor="@color/whiteee"
        app:cardElevation="@dimen/margin_short_2"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/view_height_40"
        android:layout_marginBottom="@dimen/view_height_40"
        android:layout_marginLeft="@dimen/view_height_80"
        android:layout_marginRight="@dimen/view_height_80"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_15"

            >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/permissionInfoPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        />


            <CheckBox
                android:id="@+id/termsCondCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_10"
                android:textColor="@color/permissionDesc"
                android:textSize="@dimen/text_size_16"
                android:text="@string/read_and_agree"

                />

            <TextView
                android:id="@+id/termsCondBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="@dimen/margin_short_5"
                android:paddingLeft="@dimen/margin_short_4"
                android:paddingTop="@dimen/margin_short_5"
                android:paddingRight="@dimen/margin_short_5"
                android:textColor="@color/hos_send_log"
                android:textSize="@dimen/text_size_16"
                android:text="@string/terms_of_service"
                android:layout_toRightOf="@+id/termsCondCheckBox"
                />


            <TextView
                android:id="@+id/permsnInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/color_eld_theme"
                android:textSize="@dimen/text_size_16"
                android:layout_marginRight="@dimen/margin_19"
                android:paddingBottom="@dimen/margin_short_5"
                android:paddingLeft="@dimen/margin_15"
                android:paddingTop="@dimen/margin_short_5"
                android:paddingRight="@dimen/margin_15"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"

                />

            <TextView
                android:id="@+id/getStartedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_started"
                android:textColor="@color/whiteee"
                android:textSize="@dimen/text_size_16"
                android:layout_marginRight="@dimen/margin_19"
                android:paddingBottom="@dimen/margin_short_8"
                android:paddingTop="@dimen/margin_short_8"
                android:paddingLeft="@dimen/view_height_35"
                android:paddingRight="@dimen/view_height_35"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/blue_new_drawable"

                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>