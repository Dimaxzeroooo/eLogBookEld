<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsMainLay"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >


<include
    android:id="@+id/actionbarMainLay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    layout="@layout/actionbar_eld"
    />


    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_20"
        android:scrollbars="none"

        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            >



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_new_default"

            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:text="@string/can_cycle"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/caCycleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/temp_no_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_17"
                    />


                <Spinner
                    android:id="@+id/caCycleSpinner"
                    style="@style/spinner_style_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:paddingTop="@dimen/margin_short_7"
                    android:paddingBottom="@dimen/margin_short_7"
                    android:visibility="gone"

                    />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_20"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/us_cycle"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/usCycleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_no_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_17"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    />



                <Spinner
                    android:id="@+id/usCycleSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:paddingTop="@dimen/margin_short_7"
                    android:paddingBottom="@dimen/margin_short_7"
                    style="@style/spinner_style_transparent"
                    android:visibility="gone"

                    />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_20"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_zone"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />


                <TextView
                    android:id="@+id/timeZoneTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_no_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_17"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    />




                <Spinner
                    android:id="@+id/timeZoneSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:paddingTop="@dimen/margin_short_7"
                    android:paddingBottom="@dimen/margin_short_7"
                    style="@style/spinner_style_transparent"
                    android:visibility="gone"

                    />
            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_new_default"
            android:layout_marginTop="@dimen/margin_20"

            >


            <RelativeLayout
                android:id="@+id/haulExceptionLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_15"
                >

                <TextView
                    android:id="@+id/haulExpTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/take_16_hour_exc"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />




                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/haulExceptnSwitchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:checked="false"
                    app:theme="@style/Custom.Widget.SwitchCompat"

                    android:layout_toLeftOf="@+id/rightMenuBtn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"


                    />


            </RelativeLayout>


            <TextView
                android:id="@+id/haulExcptnTxtVw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />




            <RelativeLayout
                android:id="@+id/adverseExceptionLay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_15"
                >

                <TextView
                    android:id="@+id/adverseExpTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/adverse_excp"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />




                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/adverseSwitchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true"
                    android:checked="false"
                    android:textColorHighlight="@color/colorPrimary"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:thumbTextPadding="@dimen/margin_short_5"
                    android:layout_toLeftOf="@+id/rightMenuBtn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    app:theme="@style/Custom.Widget.SwitchCompat"

                    />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />



            <RelativeLayout
                android:id="@+id/docBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/documents"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />



                <ImageView
                    android:layout_width="@dimen/view_height_38"
                    android:layout_height="@dimen/view_height_38"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/document"

                    />




            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />



            <RelativeLayout
                android:id="@+id/obdDiagnoseBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obd_diagnose"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />


                <ImageView
                    android:id="@+id/obdDiagnoseImgVw"
                    android:layout_width="@dimen/view_height_38"
                    android:layout_height="@dimen/view_height_38"
                    android:src="@drawable/obd_settings"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />



            </RelativeLayout>



            <TextView
                android:id="@+id/obdDiagnoseTxtVw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />






            <RelativeLayout
                android:id="@+id/SyncDataBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/synchronize_data"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />


                <com.constants.LoadingSpinImgView
                    android:id="@+id/settingSpinImgVw"
                    android:layout_width="@dimen/view_height_38"
                    android:layout_height="@dimen/view_height_38"
                    android:src="@drawable/sync_settings"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />



            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />




            <RelativeLayout
                android:id="@+id/checkInternetBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Internet_Status"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />



                <ImageView
                    android:layout_width="@dimen/view_height_38"
                    android:layout_height="@dimen/view_height_38"
                    android:src="@drawable/internet"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />




            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_short_1"
                android:background="@color/gray_updated_divider_color"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginRight="@dimen/margin_15"
                />



            <RelativeLayout
                android:id="@+id/checkAppUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_45"
                android:paddingRight="@dimen/margin_15"
                >

                <TextView
                    android:id="@+id/checkAppUpdateTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Update_Status"
                    android:layout_marginLeft="@dimen/margin_12"
                    android:textColor="@color/bluee_login"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />



                <ImageView
                    android:id="@+id/updateAppDownloadIV"
                    android:layout_width="@dimen/view_height_38"
                    android:layout_height="@dimen/view_height_38"
                    android:src="@drawable/download"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"

                    />


                <com.constants.CircularProgressBar
                    android:id="@+id/downloadProgressBar"
                    android:layout_width="@dimen/view_height_38"
                    android:layout_height="@dimen/view_height_38"
                    app:animateProgress="true"
                    app:backgroundStrokeColor="@color/gray_default"
                    app:backgroundStrokeWidth="@dimen/margin_short_2"
                    app:drawBackgroundStroke="true"
                    app:foregroundStrokeCap="butt"
                    app:foregroundStrokeColor="@color/colorPrimary"
                    app:foregroundStrokeWidth="@dimen/margin_short_3"
                    app:indeterminate="false"
                    app:indeterminateRotationAnimationDuration="1200"
                    app:indeterminateSweepAnimationDuration="600"
                    app:indeterminateMinimumAngle="45"
                    app:maximum="100"
                    app:progress="0"
                    app:progressAnimationDuration="100"
                    app:startAngle="270"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    />



                <ImageView
                    android:id="@+id/downloadHintImgView"
                    android:layout_width="@dimen/margin_25"
                    android:layout_height="@dimen/margin_25"
                    android:layout_marginRight="@dimen/margin_short_6"
                    android:src="@drawable/download_downward"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    />


            </RelativeLayout>











            <Button
        android:id="@+id/settingSaveBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_40"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17"
        android:layout_marginLeft="@dimen/view_height_50"
        android:layout_marginRight="@dimen/view_height_50"
        android:layout_marginTop="@dimen/view_height_60"
        android:background="@drawable/red_btn_selector"
        android:visibility="gone"
        />



        </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>