<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_45"
        android:paddingLeft="@dimen/margin_short_5"
    >

    <ImageView
        android:id="@+id/otherFeatureImgView"
        android:layout_width="@dimen/margin_25"
        android:layout_height="@dimen/margin_25"
        android:layout_gravity="center_vertical"
        android:tint="?attr/txt_eld_color"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/otherFeatureTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10"
        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"
        android:textColor="?attr/txt_eld_color"
        android:singleLine="true"

        />


        <TextView
            android:id="@+id/notiBadgeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/text_size_10"
            android:padding="@dimen/margin_short_1"

            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/circuler_textview_phone"
            android:layout_marginTop="@dimen/margin_short_2"
            android:visibility="gone"

            />



        <TextView
        android:id="@+id/errorOtherView"
        android:layout_width="@dimen/margin_14"
        android:layout_height="@dimen/margin_14"
        android:layout_marginLeft="@dimen/margin_25"
        android:textColor="@color/whiteee"
        android:background="@drawable/error"
        android:layout_gravity="center_vertical"
        android:visibility="gone"

        />

    </LinearLayout>

</LinearLayout>