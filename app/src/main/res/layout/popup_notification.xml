<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_full_border"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_short_5"
        >

    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="@dimen/view_height_450"
        android:layout_height="wrap_content"
        android:text="@string/notification"

        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_18"
        android:gravity="left"
        android:layout_marginTop="@dimen/margin_short_7"
        android:layout_marginBottom="@dimen/margin_12"
        android:layout_marginLeft="@dimen/margin_20"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_short_1"
        android:background="@color/dividerColor"
        />



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_170"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:paddingTop="@dimen/margin_short_5"/>

    <LinearLayout
        android:id="@+id/layout_dot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>


    <Button
        android:id="@+id/notificationOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_17"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_10"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:background="@color/transparent"
        android:layout_gravity="right"
        android:textAllCaps="false"

        />

    </LinearLayout>

</LinearLayout>