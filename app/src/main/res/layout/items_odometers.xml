<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/layout_color_odometer"
        >

        <TextView
            android:id="@+id/vehicleReadingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_no_value"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_short_5"
            android:singleLine="true"
            android:layout_weight="1"
            />



        <TextView
            android:id="@+id/startReadingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_no_value"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_short_5"
            android:textColor="?attr/textColor"
            android:singleLine="true"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/endReadingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_no_value"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_short_5"
            android:singleLine="true"
            android:layout_weight="1"
            />



        <TextView
            android:id="@+id/distanceReadingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_no_value"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_short_5"
            android:singleLine="true"
            android:layout_weight="1"
            />

         <TextView
            android:id="@+id/distancekmTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temp_no_value"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_short_5"
            android:singleLine="true"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/personalTV"
            android:layout_width="@dimen/view_height_45"
            android:layout_height="wrap_content"
            android:textColor="?attr/color_eld_bg"
            android:textSize="@dimen/text_size_16"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_short_5"
            android:paddingBottom="@dimen/margin_short_5"
            android:singleLine="true"
            android:textStyle="bold"

            />



    </LinearLayout>




</LinearLayout>