<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_full_border"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_12"
        >

        <RelativeLayout
            android:id="@+id/supportTopLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_11"
                android:gravity="center"
                android:padding="@dimen/margin_short_5"
                android:background="@color/color_eld_theme"
                android:layout_marginTop="@dimen/margin_10"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_Support"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_18"
                android:gravity="center"
                android:padding="@dimen/margin_short_5"
                android:background="@drawable/green_default"
                />

        </RelativeLayout>




        <ListView
            android:id="@+id/supportListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="@dimen/margin_short_1"
            android:divider="@color/black_hover"
            android:paddingBottom="@dimen/view_height_55"
            android:layout_below="@+id/supportTopLay"
            />

        <Button
            android:id="@+id/supportDismissBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height_36"
            android:text="@string/Close"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_17"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:paddingRight="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_20"
            android:background="@drawable/support_black_selector"
            />


    </RelativeLayout>




</RelativeLayout>