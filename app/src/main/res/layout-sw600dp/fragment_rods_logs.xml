<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eldHomeMainLay"
    android:background="?attr/bgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/eldActionBar"
        layout="@layout/actionbar_eld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/eldActionBar"
        android:paddingTop="@dimen/margin_10"
        >

        <lib.kingja.switchbutton.SwitchMultiButton
            android:id="@+id/switchButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height_35"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:paddingTop="@dimen/margin_short_8"
            android:paddingBottom="@dimen/margin_short_8"
            app:strokeRadius="@dimen/margin_short_5"
            app:strokeWidth="@dimen/margin_short_1"
            app:selectedTab="0"
            app:selectedColor="?attr/color_eld_theme"
            app:switchTabs="@array/switch_tabs"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:textSize="@dimen/text_size_14"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        </RelativeLayout>


        <ListView
            android:id="@+id/downloadDataListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/gray_background"
            android:dividerHeight="@dimen/margin_short_1"
            tools:listitem="@layout/item_rods_listing"
            android:layout_marginTop="@dimen/margin_10"
            />




    </LinearLayout>





    <ProgressBar
        android:id="@+id/progressBarEld"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"

        />

    <ProgressBar
        android:id="@+id/downloadProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/noDataRODSTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/No_Trip_Assigned"
        android:textColor="@color/gray_text_transparent"
        android:textSize="@dimen/text_size_29"
        android:layout_centerInParent="true"
        android:visibility="visible"
        />



</RelativeLayout>