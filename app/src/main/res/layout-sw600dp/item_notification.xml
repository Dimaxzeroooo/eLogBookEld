<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_18"
    android:paddingRight="@dimen/margin_18"
   >


    <TextView
        android:id="@+id/notificationTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="?attr/active_status_bg"
        android:textSize="@dimen/text_size_21" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <TextView
        android:id="@+id/notificationDescTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_semi"
        android:layout_marginTop="@dimen/margin_short_5"
        android:paddingBottom="@dimen/margin_short_4"
        android:textSize="@dimen/text_size_19" />

</ScrollView>

</LinearLayout>