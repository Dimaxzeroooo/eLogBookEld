<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    tools:ignore="HardcodedText">



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_12"
            android:layout_marginRight="@dimen/margin_short_1"
            android:layout_marginLeft="@dimen/margin_short_1"
            android:background="@drawable/white_top_rectangle"
               android:backgroundTint="?attr/trailer_dialog_background"
            >

            <TextView
                android:id="@+id/ecmAlertTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_short_8"
                android:layout_marginBottom="@dimen/margin_12"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/Limited_ELD_Connection"
                android:textColor="?attr/txt_eld_color"
                android:textSize="@dimen/text_size_21"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/bleStatusTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_13"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/ble_disabled_"
                android:textColor="@color/warning"
                android:textSize="@dimen/text_size_17"
                android:visibility="gone"
                android:layout_toRightOf="@+id/ecmAlertTitleTV" />


            <ImageView
                android:id="@+id/closeDialogImg"
                android:layout_width="@dimen/view_height_55"
                android:layout_height="@dimen/view_height_55"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_11"
                android:src="@drawable/close_img_circle"


                />


            <ImageView
                android:id="@+id/errorImgEcm"
                android:layout_width="@dimen/view_height_35"
                android:layout_height="@dimen/view_height_35"
                android:layout_below="@+id/ecmAlertTitleTV"
                android:layout_marginLeft="@dimen/margin_10"
                android:paddingTop="@dimen/margin_short_8"
                android:src="@drawable/warning_img"

                />

            <TextView
                android:id="@+id/limitedConnDescTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ecmAlertTitleTV"
                android:layout_marginTop="@dimen/margin_short_5"
                android:layout_toLeftOf="@+id/closeDialogImg"
                android:layout_toRightOf="@+id/errorImgEcm"
                android:paddingLeft="@dimen/margin_11"
                android:text="@string/limited_ecm_desc_new"
                android:textColor="?attr/splash_gray"
                android:textSize="@dimen/text_size_17" />


            <TextView
                android:id="@+id/okAlertBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold"
                android:textColor="?attr/txt_eld_color"
                android:layout_marginTop="@dimen/margin_short_3"
                android:layout_below="@+id/limitedConnDescTxtView"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_short_8"
                android:layout_marginRight="@dimen/view_height_40"
                android:visibility="gone"

                />



        </RelativeLayout>


</RelativeLayout>