<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/jobCancelLay"
    >


    <RelativeLayout
        android:id="@+id/actionBarJobDetailCancellation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_55"
        android:background="@color/actionbar_bg"
        >




        <RelativeLayout
            android:id="@+id/backCancelLay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:background="@drawable/logout_selector"
            >



            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_26"
                android:src="@drawable/back_btn"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:layout_toRightOf="@+id/backBtn"
                android:textSize="@dimen/text_size_20"
                android:paddingTop="@dimen/margin_short_2"
                android:layout_marginLeft="@dimen/margin_short_7"
                android:textColor="@color/white"

                />



        </RelativeLayout>

        <TextView
            android:id="@+id/logoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancellation"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_22"
            android:textColor="@color/white"
            />



        <Button
            android:id="@+id/doneBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="8dp"
            android:text="Done"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/white"
            android:background="@drawable/logout_selector"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please specify the reason for cancellation of this Pickup:"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18"
        android:paddingTop="@dimen/margin_short_8"
        android:paddingBottom="@dimen/margin_short_8"
        android:paddingLeft="@dimen/margin_13"
        android:paddingRight="@dimen/margin_13"

        />



    <com.constants.CustomEditText
        android:id="@+id/cancellationEditText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/edtittext_border"
        android:gravity="top|left"
        android:hint="Reason"
        android:textColor="@color/black"
        android:padding="@dimen/margin_10"
        android:textSize="@dimen/text_size_19"
        android:layout_margin="@dimen/margin_short_8"

        />
</LinearLayout>
