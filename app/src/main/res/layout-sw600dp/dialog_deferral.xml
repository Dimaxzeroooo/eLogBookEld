<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/view_height_80"
    android:paddingLeft="@dimen/view_height_80"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_default"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/margin_17"
        android:paddingBottom="@dimen/margin_29"
           android:backgroundTint="?attr/trailer_dialog_background"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/cancelDefTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textColor="?attr/txt_eld_color"
                android:textSize="@dimen/text_size_17"
                android:paddingRight="@dimen/margin_15"
                android:paddingLeft="@dimen/margin_15"
                android:paddingTop="@dimen/margin_short_8"
                android:paddingBottom="@dimen/margin_short_8"
                android:layout_marginRight="@dimen/margin_short_5"
                android:layout_alignParentRight="true"
                android:background="?attr/text_black"

                />

        </RelativeLayout>


        <TextView
            android:id="@+id/deferralTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Day1ofDeferral"
            android:textSize="@dimen/text_size_18"
            android:textColor="?attr/textColor"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ReviewConfirmDef"
            android:textSize="@dimen/text_size_21"
            android:textStyle="bold"
            android:textColor="?attr/txt_eld_color"
            android:layout_marginTop="@dimen/margin_short_8"

            />

        <TextView
            android:id="@+id/defTimeDurationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:text="@string/youCanDef"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center_horizontal"
            android:textColor="?attr/textColor"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_short_9"
            android:paddingBottom="@dimen/margin_short_9"
            android:paddingLeft="@dimen/view_height_180"
            android:paddingRight="@dimen/view_height_180"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/rectangle_grey_bg"
            >

            <TextView
                android:id="@+id/timeToDefTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time to defer"
                android:textSize="@dimen/text_size_17"
                android:textColor="?attr/textColor"

                />


            <TextView
                android:id="@+id/defTimeTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hrs 0 min"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_19"
                android:textColor="?attr/txt_eld_color"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/defConfirmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_14"
            android:gravity="center"
            android:background="@drawable/eld_blue_new_selector"
            android:layout_marginLeft="@dimen/view_height_100"
            android:layout_marginRight="@dimen/view_height_100"
            android:layout_marginTop="@dimen/margin_25"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_19"

                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>



