<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_full_border"
        android:orientation="vertical"
        android:minWidth="@dimen/view_height_500"
        android:paddingBottom="@dimen/margin_15"
        >

    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:background="@drawable/blue_top_corner_drawable"
        android:textColor="@color/whiteee"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_21"
        android:gravity="center"
        android:paddingTop="@dimen/margin_10"
        android:paddingBottom="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_short_1"
        android:background="@color/dividerColor"
        />



    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_250"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/margin_short_9"/>


        <TextView
            android:id="@+id/notificationDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textColor="@color/black_hover"
            android:textSize="@dimen/text_size_17"
            android:gravity="left"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginLeft="@dimen/view_height_45"
            android:visibility="gone"

            />



        <LinearLayout
        android:id="@+id/layout_dot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_35"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>


    <Button
        android:id="@+id/notificationOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/view_height_50"
        android:text="@string/ok"
        android:textColor="@color/whiteee"
        android:textSize="@dimen/text_size_20"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_20"
        android:paddingLeft="@dimen/margin_25"
        android:paddingRight="@dimen/margin_25"
        android:paddingBottom="@dimen/margin_short_5"
        android:background="@drawable/eld_blue_new_selector"

        android:layout_gravity="right"
        android:textAllCaps="false"

        />

    </LinearLayout>

</LinearLayout>