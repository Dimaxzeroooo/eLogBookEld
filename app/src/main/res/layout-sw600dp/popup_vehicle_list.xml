<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent"
        android:padding="@dimen/margin_20"
        android:layout_centerVertical="true"
        >

    <LinearLayout
        android:id="@+id/loginTruckLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/voilet_border"
        android:padding="@dimen/margin_15"
      android:layout_centerVertical="true"
           android:backgroundTint="?attr/trailer_dialog_background"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/margin_10"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/TitleVehTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_truck_from_list"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_22"
                android:textColor="?attr/textColor"
                android:paddingBottom="@dimen/margin_short_8"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"

                />






            <TextView
                android:id="@+id/logoutVehTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textSize="@dimen/text_size_19"
                android:textColor="?attr/textColor"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/margin_short_5"
                android:paddingLeft="@dimen/margin_short_5"
                android:paddingBottom="@dimen/margin_short_5"
                android:paddingTop="@dimen/margin_18"
                android:gravity="center_horizontal"


                />



        </RelativeLayout>





        <TextView
            android:id="@+id/updateVehTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_truck_to_changee"
            android:textSize="@dimen/text_size_19"
            android:textColor="?attr/textColor"
            android:layout_marginTop="@dimen/margin_18"
            android:layout_marginLeft="@dimen/margin_15"
            android:textStyle="bold"
            android:visibility="invisible"

            />


        <com.androidtrip.plugins.searchablespinner.SearchableSpinner
            android:id="@+id/searchableSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_height_50"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_short_1"
            android:paddingTop="@dimen/margin_short_1"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_short_3"
            android:gravity="center_horizontal"
            app:BoarderColor="@android:color/white"
            app:BordersSize="@dimen/margin_short_1"
            app:RevealEmptyText="@string/Select"
            app:ShowBorders="true"
            app:RevealViewBackgroundColor="@color/white"
            android:background="@drawable/edtittext_border"
            app:SpinnerExpandHeight="@dimen/view_height_250"


            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height_45"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/view_height_80"
            android:paddingRight="@dimen/view_height_100"
            android:paddingLeft="@dimen/view_height_100"
            >



            <Button
                android:id="@+id/btnCancelChngeVehJob"
                android:layout_width="@dimen/view_height_150"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:textSize="@dimen/text_size_19"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_20"
                android:textColor="@color/whiteee"
                android:background="@drawable/gray_selector"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:visibility="gone"
                />


            <Button
                android:id="@+id/btnSaveVehList"
                android:layout_width="@dimen/view_height_150"
                android:layout_height="match_parent"
                android:text="@string/save"
                android:textSize="@dimen/text_size_19"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_15"
                android:textColor="@color/whiteee"
                android:background="@drawable/green_selector"
                android:textAllCaps="false"
                android:layout_weight="1"

                />





        </LinearLayout>




        </LinearLayout>

     </RelativeLayout>


    </RelativeLayout>

