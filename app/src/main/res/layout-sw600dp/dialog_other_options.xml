<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otherOptionMainLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <ImageView
        android:id="@+id/polyImg"
        android:layout_width="@dimen/margin_17"
        android:layout_height="@dimen/margin_20"
        android:background="@drawable/polygon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_16"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15"
        android:background="@drawable/white_default"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/polyImg"
        android:layout_marginRight="@dimen/margin_short_9"
        android:backgroundTint="?attr/layout_color_dot"
        >


        <ListView
            android:id="@+id/otherFeatureListView"
            android:layout_width="@dimen/view_height_320"
            android:layout_height="wrap_content"
            android:divider="@null"

            />

    </LinearLayout>




</RelativeLayout>