<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/gray_updated_theme_color"
    >


    <include
        android:id="@+id/malfunctionActionBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_55"
        layout="@layout/actionbar_eld"
        />

    <ExpandableListView
        android:id="@+id/malfunctionExpandList"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@null"
        android:childDivider="@color/white"
        android:divider="@color/transparent"
        android:layout_below="@+id/malfunctionActionBar"
        />


    <TextView
        android:id="@+id/noRecordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/No_Trip_Assigned"
        android:textColor="@color/gray_text_transparent"
        android:textSize="@dimen/text_size_29"
        android:layout_centerInParent="true"

        />


    <TextView
        android:id="@+id/invisibleMalfnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />


</RelativeLayout>