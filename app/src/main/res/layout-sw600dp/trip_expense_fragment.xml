<RelativeLayout
    android:id="@+id/wheel_picker_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/divider_light_grey_line"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/view_height_190"
android:visibility="gone"
    >

<TextView
    android:id="@+id/wheelSelectedBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:text="@string/done"
    android:textStyle="bold"
    android:textSize="@dimen/text_size_22"
    android:textColor="@color/black"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    android:paddingTop="@dimen/margin_15"
    android:paddingBottom="@dimen/margin_15"
    />





</RelativeLayout>




    <include
        android:id="@+id/scanDocccLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/add_scan_doc_view"
        android:visibility="gone"
        />


</RelativeLayout>