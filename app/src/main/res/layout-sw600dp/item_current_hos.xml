<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_12"

        >


        <ImageView
            android:id="@+id/hosTypeImgView"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_25"
            android:src="@drawable/error"
            android:padding="@dimen/margin_short_2"
            />


        <TextView
            android:id="@+id/hosTypeTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELD gjhjb"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_17"
            android:textColor="?attr/textColor"
            android:layout_toRightOf="@+id/hosTypeImgView"
            android:paddingLeft="@dimen/margin_10"

            />


        <TextView
            android:id="@+id/hosTypeDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ssdasdsads"
            android:textSize="@dimen/text_size_15"
            android:textColor="?attr/splash_gray"
            android:layout_toRightOf="@+id/hosTypeImgView"
            android:layout_below="@+id/hosTypeTitleTV"
            android:paddingLeft="@dimen/margin_10"


            />

    </RelativeLayout>


    </LinearLayout>