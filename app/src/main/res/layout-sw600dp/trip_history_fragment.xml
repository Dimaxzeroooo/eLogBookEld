<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/tripHisLay"
    >


    <RelativeLayout
        android:id="@+id/actionbarTripHistoryLay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_55"
        android:background="@color/actionbar_bg"

        >


        <RelativeLayout
            android:id="@+id/backMenuLay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/view_height_55"
            android:paddingRight="@dimen/margin_15"

            >

            <ImageView
                android:id="@+id/menuImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/slide_menu"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_13"
                />


            <TextView
                android:id="@+id/menuTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/menuImageView"
                android:text="Back"
                android:textSize="17sp"
                android:paddingLeft="2dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                />

        </RelativeLayout>



        <TextView
            android:id="@+id/tripTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip History"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:layout_centerInParent="true"
            />


        <!--  <Button
          android:id="@+id/logoutText"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:paddingLeft="12dp"
          android:paddingRight="12dp"
          android:text="Logout"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:background="@drawable/logout_selector"
          android:layout_alignParentRight="true"
              />
          -->

    </RelativeLayout>


    <ExpandableListView
        android:id="@+id/tripHistoryExpandList"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:cacheColorHint="#00000000"
        android:groupIndicator="@null"
        android:layout_below="@+id/actionbarTripHistoryLay"
        />



<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    <TextView
        android:id="@+id/noTripHistoryTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/No_Trip_Assigned"
        android:textColor="@color/gray_text_transparent"
        android:textSize="@dimen/view_height_32"
        android:layout_centerInParent="true"

        />

</ScrollView>

    <Button
        android:id="@+id/tripHistoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:id="@+id/progressBarHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>