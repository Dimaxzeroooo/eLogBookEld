<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_full_border"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:backgroundTint="?attr/layout_color_dot"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_16"
        >

        <TextView
            android:id="@+id/headertextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/internet_alert_default"
            android:gravity="left"
            android:paddingLeft="@dimen/margin_25"
            android:paddingTop="@dimen/margin_18"
            android:paddingBottom="@dimen/margin_17"

            android:text="@string/action_Support"
            android:textColor="@color/color_eld_theme"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />


        <ListView
            android:id="@+id/supportListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="@dimen/margin_short_1"
            android:divider="@color/gray_text_color"
            android:layout_below="@+id/headertextView"
            />


        <TextView
            android:id="@+id/bleDismissBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/supportListView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/view_height_30"
            android:layout_marginTop="@dimen/margin_26"
            android:background="@drawable/media_white_drawable"
            android:paddingLeft="@dimen/view_height_33"
            android:paddingTop="@dimen/margin_short_8"
            android:paddingRight="@dimen/view_height_33"
            android:paddingBottom="@dimen/margin_short_8"
            android:text="@string/Close"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_21"
            android:textStyle="bold" />





    </RelativeLayout>




</RelativeLayout>