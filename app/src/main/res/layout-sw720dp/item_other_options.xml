<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_60"
        android:paddingLeft="@dimen/margin_10"
    >

    <ImageView
        android:id="@+id/otherFeatureImgView"
        android:layout_width="@dimen/view_height_35"
        android:layout_height="@dimen/view_height_35"
        android:layout_gravity="center_vertical"

        />


    <TextView
        android:id="@+id/otherFeatureTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_15"
        android:textSize="@dimen/text_size_22"
        android:textStyle="bold"
        android:textColor="@color/gray_other_feature"
        android:singleLine="true"

        />


    <TextView
        android:id="@+id/errorOtherView"
        android:layout_width="@dimen/margin_23"
        android:layout_height="@dimen/margin_23"
        android:layout_marginLeft="@dimen/view_height_30"
        android:textColor="@color/whiteee"
        android:background="@drawable/error"
        android:layout_gravity="center_vertical"
        android:visibility="gone"

        />

    </LinearLayout>



</LinearLayout>