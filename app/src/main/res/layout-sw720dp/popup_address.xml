<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/voilet_border"
            android:padding="@dimen/margin_29"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TitleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margin_short_8"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_25"
                    android:textStyle="bold"

                    />


            </RelativeLayout>



            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_21"
                android:hint="@string/TrailorNo"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:imeOptions="flagNoFullscreen|actionDone"
                />


            <!--  </com.google.android.material.textfield.TextInputLayout>-->





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_56"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/view_height_55"
                android:paddingRight="@dimen/margin_20"
                android:paddingLeft="@dimen/margin_20"
                >



                <Button
                    android:id="@+id/btnCancelLoadingJob"
                    android:layout_width="@dimen/view_height_150"
                    android:layout_height="@dimen/view_height_35"
                    android:text="@string/cancel"
                    android:textSize="@dimen/text_size_21"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_20"
                    android:textColor="@color/whiteee"
                    android:background="@drawable/gray_selector"
                    android:textAllCaps="false"
                    android:layout_weight="1"

                    />


                <Button
                    android:id="@+id/btnLoadingJob"
                    android:layout_width="@dimen/view_height_150"
                    android:layout_height="@dimen/view_height_35"
                    android:text="@string/ok"
                    android:textSize="@dimen/text_size_21"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_15"
                    android:textColor="@color/whiteee"
                    android:background="@drawable/green_selector"
                    android:textAllCaps="false"
                    android:layout_weight="1"

                    />





            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>