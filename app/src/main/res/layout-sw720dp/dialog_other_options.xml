<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/otherOptionMainLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/polyImg"
        android:layout_width="@dimen/margin_23"
        android:layout_height="@dimen/margin_26"
        android:background="@drawable/polygon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginTop="@dimen/view_height_70"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_20"
        android:background="@drawable/white_default"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/polyImg"
        android:layout_marginRight="@dimen/margin_17"
        >


        <ListView
            android:id="@+id/otherFeatureListView"
            android:layout_width="@dimen/view_height_400"
            android:layout_height="wrap_content"
            android:divider="@null"

            />

    </LinearLayout>




</RelativeLayout>