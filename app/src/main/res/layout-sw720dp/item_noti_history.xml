<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_height_135">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@color/white_theme"

        >
        <!--margin_22-->

    <RelativeLayout
        android:id="@+id/notiRecycleMainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gray_eld_default"
       android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_short_6"
        android:paddingBottom="@dimen/margin_short_6"
        android:layout_centerVertical="true"
        >
        <!--android:layout_marginRight="@dimen/margin_23"-->

        <TextView
            android:id="@+id/historyTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_23"
            android:textStyle="bold"
            android:textColor="@color/color_eld_theme"

            />


        <TextView
            android:id="@+id/historyDescTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_21"
            android:textColor="@color/black"
            android:layout_below="@+id/historyTitleTV"
            android:layout_toLeftOf="@+id/deleteHistoryBtn"

            />


        <TextView
            android:id="@+id/historyDurationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_21"
            android:textColor="@color/color_eld_theme"
            android:layout_marginRight="@dimen/view_height_55"
            android:layout_alignParentRight="true"

            />

        <ImageView
            android:id="@+id/deleteHistoryBtn"
            android:layout_width="@dimen/view_height_65"
            android:layout_height="@dimen/view_height_50"
            android:src="@drawable/delete_red"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_short_5"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"

            />


    </RelativeLayout>



</RelativeLayout>

</RelativeLayout>