<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_default"
           android:backgroundTint="?attr/trailer_dialog_background"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/view_height_30"
        android:paddingBottom="@dimen/view_height_40"
        android:paddingRight="@dimen/view_height_30"
        android:paddingLeft="@dimen/view_height_30"


        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_hos_configu"
        android:textSize="@dimen/text_size_21"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:paddingBottom="@dimen/margin_short_5"
        />


        <ListView
            android:id="@+id/hosConfigListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_20"
            tools:listitem="@layout/item_current_hos"
            />



        <Button
            android:layout_width="@dimen/view_height_130"
            android:layout_height="@dimen/view_height_54"
            android:id="@+id/btn_ok"
            android:layout_marginTop="@dimen/view_height_30"
            android:text="@string/ok"
            android:textSize="@dimen/text_size_21"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/green_selector"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_25"

            />

    </LinearLayout>

    </ScrollView>




</LinearLayout>